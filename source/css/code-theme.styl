// Custom code syntax highlighting theme
pre, code
  background-color: #0d0d0d !important
  color: #e5e2df !important
  border: 1px solid #242424 !important

// Inline code
code
  background-color: #121212 !important
  color: #ff7a25 !important
  padding: 0.2em 0.4em !important
  border-radius: 3px !important

// Code blocks
pre
  background-color: #0d0d0d !important
  padding: 1.5rem !important
  border-radius: 8px !important
  overflow-x: auto !important

// Syntax highlighting colors
.hljs
  background: #0d0d0d !important
  color: #e5e2df !important

.hljs-keyword, .hljs-selector-tag, .hljs-built_in
  color: #ff7a25 !important // Orange for keywords

.hljs-string, .hljs-attr
  color: #4ade80 !important // Green for strings

.hljs-number, .hljs-literal
  color: #60a5fa !important // Blue for numbers

.hljs-function, .hljs-title
  color: #fbbf24 !important // Yellow for functions

.hljs-comment
  color: #6b7280 !important // Gray for comments
  font-style: italic !important

.hljs-variable, .hljs-name
  color: #e5e2df !important // Default text color

.hljs-tag
  color: #ff7a25 !important // Orange for HTML tags

.hljs-punctuation, .hljs-operator
  color: #9ca3af !important // Light gray for punctuation

// Line numbers
.hljs-ln-numbers
  color: #6b7280 !important
  border-right: 1px solid #242424 !important
  padding-right: 0.5rem !important
  margin-right: 0.5rem !important

// Copy button styling
.copy-btn
  background-color: #ff7a25 !important
  color: #ffffff !important
  border: none !important
  border-radius: 4px !important
  padding: 0.5rem !important
  position: absolute !important
  top: 0.5rem !important
  right: 0.5rem !important
  cursor: pointer !important
  transition: background-color 0.3s ease !important

.copy-btn:hover
  background-color: #ff9f4e !important